<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bradperkins.project3" >

    <permission android:name="com.example.bradperkins.project3"
                android:protectionLevel="dangerous"/>

    <provider
        android:name=".ContactProvider"
        android:authorities="com.example.bradperkins.project3"
        android:enabled="true"
        android:exported="true"
        android:permission="com.example.bradperkins.project3"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ViewActivity"
                  android:label="View"
                  android:parentActivityName=".Activities.MainActivity"
                  android:theme="@style/AppTheme" >>
        </activity>
        <activity
            android:name=".Activities.AddActivity"
            android:parentActivityName=".Activities.MainActivity"
            android:label="Add"
            android:theme="@style/AppTheme">
        </activity>



        <receiver android:name=".Widget.WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.example.bradperkins.ACTION_VIEW_DETAILS"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/collection_appwidget_info"/>
        </receiver>




        <provider
            android:authorities="com.example.bradperkins.project3"
            android:name=".ContactProvider"
            android:exported="true"/>

        <service android:name=".Widget.WidgetService"
                 android:permission="android.permission.BIND_REMOTEVIEWS"/>


    </application>

</manifest>
