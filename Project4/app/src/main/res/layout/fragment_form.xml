<FrameLayout android:id="@+id/form_fragment_container"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.bradperkins.project4.fragments.FormFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal|top"
            android:background="#d7e4fe"
            android:padding="20dp"/>


        <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Give image a title"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Give image a name"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"/>

        <Button
            android:id="@+id/take_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Take Picture"
            android:onClick="takePic"/>

        <Button
            android:id="@+id/save_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save Picture Info"
            android:onClick="savePic"/>


    </LinearLayout>


</FrameLayout>
